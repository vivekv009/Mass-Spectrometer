%h2 Sign up
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  - if f.error_notification
    .alert-message.error
      = f.error_notification
      = f.full_error :token
  %fieldset
    .clearfix
      %label{:for => "name"} Full Name
      .input
        = f.input_field :name, :required => true, :autofocus => true
        .form_error
          = f.error :name, :id => 'user_name_error'
    / /clearfix
    .clearfix
      %label{:for => "username"} Username
      .input
        = f.input_field :username, :required => true
        .form_error
          = f.error :username, :id => 'user_username_error'
    / /clearfix
    .clearfix
      %label{:for => "email"} Email
      .input
        = f.input_field :email, :required => true
        .form_error
          = f.error :email, :id => 'user_email_error'
    / /clearfix
    .clearfix
      %label{:for => "password"} Password
      .input
        = f.input_field :password, :required => true
        .form_error
          = f.error :password, :id => 'user_password_error'
    / /clearfix
    .clearfix
      %label{:for => "password_confirmation"} Password confirmation
      .input
        = f.input_field :password_confirmation, :required => true
        .form_error
          = f.error :password_confirmation, :id => 'user_password_confirmation_error'
    / /clearfix
    .actions
      %input.btn.primary{:type => "submit", :value => "Sign up!"}/
      #links.right
        = render :partial => "devise/shared/links"
